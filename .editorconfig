root = true
# EditorConfig is awesome:http://EditorConfig.org

# top-most EditorConfig file

# All Files
[*]
charset = utf-8
end_of_line = crlf
indent_style = space
indent_size = 2
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

[*.cs]
indent_size = 4

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# Bash Files
[*.sh]
end_of_line = lf